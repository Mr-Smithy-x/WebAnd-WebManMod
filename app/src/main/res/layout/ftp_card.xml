<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"

    app:cardBackgroundColor="@color/cardview_dark_background"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ftp_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop"
            android:tint="?attr/colorPrimary"
            android:src="@mipmap/ic_folder_black_48dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/ftp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ftp_img"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="FTP Title"
            android:textSize="12sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/ftp_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ftp_title"
            android:layout_toRightOf="@id/ftp_img"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="FTP Sub"
            android:textSize="10sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/ftp_sub2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ftp_sub"
            android:layout_toRightOf="@id/ftp_img"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="FTP Sub"
            android:textSize="10sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>